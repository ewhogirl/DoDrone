<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6292A2D"
    android:padding="5dp">


    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_profile_img"
        app:layout_constraintEnd_toEndOf="@+id/nav_header_profile_img"
        app:layout_constraintStart_toStartOf="@+id/nav_header_profile_img"
        app:layout_constraintTop_toTopOf="@+id/nav_header_profile_img" />

    <TextView
        android:id="@+id/nav_header_nick"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/hyundai_b"
        android:text="your nickname"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_header_profile_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/nav_header_profile_img"
        android:layout_width="113dp"
        android:layout_height="107dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nav_header_nick"
        app:layout_constraintStart_toEndOf="@id/closeBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alan_thumbs_up" />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_baseline_close_24"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>